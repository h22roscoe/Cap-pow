<style>
    body {
        padding: 0px;
        margin: 0px;
    }

    .table th {
        text-align: center;
        font-size: 0.9em;
    }

    .table td {
        text-align: center;
        font-size: 0.75em;
    }

    .score {
        z-index: 5;
        position: absolute;
        padding-top: 10px;
        padding-left: 10px;
        left: 0;
        text-align: left;
        font-size: 1.5em;
        font-family: inherit;
        color: white;
        width: 20%;
        background-color: transparent;
    }

    #loading {
      margin: 50px auto;
      max-width: 1024px;
      position: fixed;
      width: 100%;
      height: 100%;
      text-align: center;
    }

    #loading_container {
      position: relative;
      margin: 0 auto;
      width: 50%;
      height: 20px;
      text-align: center;
      padding-top: 10px;
    }

    #loading_progress {
      width: 0%;
      background-color: red;
      position: absolute;
      height: 30px;
      top: 0px;
      left: 0px;
      opacity: 0.4;
    }
</style>

