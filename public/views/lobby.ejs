<!DOCTYPE HTML>
<html>

<head>
    <title>Cap-pow! Lobby</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.2/jquery.min.js"></script>
    <script src="https://cdn.socket.io/socket.io-1.4.5.js"></script>
    <style>
        body {
            padding-top: 80px;
            word-wrap: break-word;
        }

    </style>
</head>

<body>
    <script src="../src/lobby.js"></script>
    <div class="container">
        <div class="page-header text-center">
            <h1><span class="fa fa-anchor"></span> Lobby</h1>
            <a href="/logout" class="btn btn-default btn-sm">Logout</a>
        </div>
        <div class="row">
            <!-- LOCAL INFORMATION -->
            <div class="col-sm-12">
                <div class="well">
                    <h3>
                        <span class="fa fa-user"></span> Local
                    </h3>
                    <p>
                        <strong>username</strong>: <%= user.username %>
                        <br>
                        <strong>password</strong>: <%= user.password %>
                    </p>
                </div>
            </div>
        </div>

        <div class="row">
            <!-- GAME ROOMS LIST -->

            <div class="col-sm-8 text-center">
                <!-- IF WE WERE DOING EJS HERE -->
                <table class="table table-hover table-responsive">
                    <thead>
                        <th>Room Name</th>
                        <th># Players</th>
                    </thead>
                    <tbody id="rooms">
                        <% if (rooms) { %>
                            <% for (var i = 0; i < rooms.length; i++) { %>
                                <tr class="clickable-row" data-url="/room/<%= rooms[i].name %>">
                                    <td><%= rooms[i].name %></td>
                                    <td><%= rooms[i].players %></td>
                                </tr>
                            <% } %>
                        <% } %>
                    </tbody>
                </table>

                <a href="/lobby" class="fa fa-refresh"> Refresh</a>
            </div>

            <br>

            <div class="col-sm-4 text-center">
                <% if (message) { %>
                    <div class="alert alert-danger">
                        <%= message %>
                    </div>
                <% } %>

                <form action="/lobby" method="post">
                    <label>Create your own</label>
                    <input type="text" class="form-control" name="roomname">
                    <br>
                    <button type="submit" class="btn btn-warning btn-md">Create Room</button>
                </form>
            </div>
        </div>
    </div>
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-12 text-center">
                <footer>Copyright footer</footer>
            </div>
        </div>
    </div>
    <script>
        $(document).ready(function() {
            setInterval(function () {
                $.ajax({
                    url: "http://localhost:8080/lobby/data",
                    dataType: "json",
                    cache: false,
                    timeout: 5000,
                    success: function(rooms) {
                        var str = "";

                        for (var i = 0; i < rooms.length; i++) {
                            str += "<tr>";
                            str += "<td>" + rooms[i].name + "</td>";
                            str += "<td>" + rooms[i].players + "</td>";
                            str += "</tr>";
                        }

                        $("#rooms").html(str);
                    },
                    error: function(jqXHR, textStatus, errorThrown) {
                        alert("error " + textStatus + " " + errorThrown);
                    }
                });
            }, 15000);
        });
    </script>
</body>

</html>
