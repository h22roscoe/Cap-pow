    <title>Cap-pow! Login</title>

    <!-- Bootstrap core CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.2/jquery.min.js"></script>

    <!-- Custom styles for this template -->
    <link href="../css/login.css" rel="stylesheet">
</head>

<body>
    <div class="container">
        <div id="logo">
            <a href="/"><img src="../images/cap-pow.png" /></a>
        </div>

        <div class="col-sm-6 col-sm-offset-3">
        <!-- show any messages that come back with authentication -->
            <% if (message.length > 0) { %>
                <div id="alert" class="alert alert-danger">
                    <button type="button" class="close" data-dismiss="alert">Ã—</button>
                    <strong>Error:</strong> <%= message %>
                </div>
            <% } %>

            <!-- Change /index to /lobby -->
            <form class="form-signin" onsubmit='return checkForm(this);' action="/login" method="post">
                <label for="inputUsername" class="sr-only">Username</label>
                <input type="username" id="inputUsername" name="username" class="form-control" placeholder="Username" required autofocus>
                <label for="inputPassword" class="sr-only">Password</label>
                <input type="password" id="inputPassword" name="password" class="form-control" placeholder="Password" required>
                <br>
                <button class="btn btn-lg btn-primary btn-block" type="submit"><span class="fa fa-sign-in"></span> Sign in</button>
                <hr>
                <p>Don't have an account? <a href="/signup">Sign up here!</a></p>
            </form>
        </div>
    </div>
    <!-- /container -->
    <footer>
        <div class="container" style="padding-top: 1cm; padding-bottom: 2cm">
            <div class="row">
                <div class="span12 text-center">
                    <p><span class="fa fa-copyright"></span>&copy; Cap-pow 2016</p>
                </div>
            </div>
        </div>
    </footer>

    <script>
        function checkForm(form) {
            sessionStorage.setItem("playerId", form.username.value);

            return true;
        }

        $(document).ready(function () {
            $(".close").click(function () {
                $("#alert").html("");
                $("#alert").removeClass("alert alert-danger");
            });
        });
    </script>
</body>

</html>
