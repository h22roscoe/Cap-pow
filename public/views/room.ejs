<!DOCTYPE HTML>
<html>

<head>
    <title>Cap-pow!
        <%= roomname %>
    </title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.4.8/angular.min.js"></script>
    <script src="https://cdn.socket.io/socket.io-1.4.5.js"></script>
    <link href="../css/login.css" rel="stylesheet">
</head>

<body>
    <div class="container" ng-app="room">

        <div id="logo">
            <img src="../css/images/logo.png" />
        </div>

        <div class="page-header text-center">
            <h1><span class="fa fa-users"></span> <%= roomname %></h1>
            <a href="/lobby" class="btn btn-default btn-sm"><span class="fa fa-reply"></span> Exit</a>
        </div>
        <div class="row text-center" ng-controller="start">
            <h3 class="btn btn-default btn-lg" ng-click="startGame(<%= roomname %>)"><span class="fa fa-play"></span> Start the game!</h3>

            <div class="col-sm-4">
                <h1>{{ count }}</h1>
            </div>
        </div>

        <br>

        <div class="row">
            <div class="col-sm-8 text-center" ng-controller="players">
                <table class="table table-responsive">
                    <thead>
                        <th align="center">Players</th>
                        <th align="center">Total score</th>
                    </thead>
                    <tbody>
                        <tr ng-repeat="player in players | orderBy: 'username'">
                            <td>{{ player.username }}</td>
                            <td>{{ player.password }}</td>
                        </tr>
                    </tbody>
                </table>
                <hr>
                <a href="/room/<%= roomname %>" style="color: black"><span class="fa fa-refresh"></span> Refresh</a>
            </div>
        </div>
    </div>
    <script>
        var app = angular.module("room", []);

        app.controller("players", function ($scope, $http, $timeout, $window) {
            $scope.ajax = function () {
                $http.get($window.location.href + "/data").then(function (players) {
                    $scope.players = players.data;
                });

                $timeout($scope.ajax, 2000);
            }

            $scope.ajax();
        });

        app.controller("start", function ($scope, $window) {
            $scope.socket = io.connect("/room");

            $scope.socket.on("countDown", function (data) {
                // Change timer value on document using data.time
                if (data.time) {
                    // Prefer this to be a pop up box at some point
                    $scope.count = data.time + " seconds to go!";
                } else {
                    $window.location.href = "/game";
                }
            });

            $scope.socket.emit("joinRoom", {
                roomName: sessionStorage.getItem("roomName")
            });

            $scope.startGame = function (roomname) {
                $scope.socket.emit('countDown', {
                    roomName: sessionStorage.getItem("roomName")
                });
            }
        });
    </script>
</body>

</html>
